<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_body_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/star_1"
        android:layout_width="@dimen/app_rating_icon_size"
        android:layout_height="@dimen/app_rating_icon_size"
        android:background="@drawable/star"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/star_2"
        android:layout_width="@dimen/app_rating_icon_size"
        android:layout_height="@dimen/app_rating_icon_size"
        android:layout_marginLeft="2dp"
        android:background="@drawable/star"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/star_3"
        android:layout_width="@dimen/app_rating_icon_size"
        android:layout_height="@dimen/app_rating_icon_size"
        android:layout_marginLeft="2dp"
        android:background="@drawable/star"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/star_4"
        android:layout_width="@dimen/app_rating_icon_size"
        android:layout_height="@dimen/app_rating_icon_size"
        android:layout_marginLeft="2dp"
        android:background="@drawable/star"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/star_5"
        android:layout_width="@dimen/app_rating_icon_size"
        android:layout_height="@dimen/app_rating_icon_size"
        android:layout_marginLeft="2dp"
        android:background="@drawable/star"
        android:scaleType="center" />

    <TextView
        android:id="@+id/hotel_rate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="3.3"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="@dimen/app_text_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="åˆ†"
        android:textSize="@dimen/app_text_normal" />
