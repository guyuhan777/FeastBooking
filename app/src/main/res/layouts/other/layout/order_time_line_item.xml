<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_list_item_root_view"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/app_body_margin"
    android:paddingLeft="@dimen/app_body_margin"
    android:paddingRight="@dimen/app_body_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/banquet_halls_tv"
                android:layout_centerVertical="true"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_date_tv"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/role_iv"
                android:src="@drawable/role"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/order_date_tv"
                android:layout_width="@dimen/app_back_size"
                android:layout_height="@dimen/app_back_size" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hotel_name_tv"
                android:layout_centerVertical="true"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/table_num_tv"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/customer_name_tv"
            android:layout_centerVertical="true"
            android:textSize="@dimen/app_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/forwards_iv"
            android:src="@drawable/forwards"
            android:layout_width="@dimen/app_back_small"
            android:layout_height="@dimen/app_back_small" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/app_body_margin"
        android:layout_marginBottom="@dimen/app_body_margin"
        android:id="@+id/finished_state_ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/finish_green"
            android:layout_width="@dimen/app_back_size"
            android:layout_height="@dimen/app_back_size" />
        <TextView
            android:layout_marginLeft="@dimen/app_body_margin"
            android:textColor="#7dc48f"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/app_text_normal"
            android:text="完成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/time_line_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"></android.support.v7.widget.RecyclerView>
    <include layout="@layout/seperateline_horizontal" />
</LinearLayout>