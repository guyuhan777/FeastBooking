<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_fix_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/app_body_margin">
        <ImageView
            android:id="@+id/search"
            android:layout_centerVertical="true"
            android:background="@drawable/search_3"
            android:layout_width="@dimen/app_back_size"
            android:layout_height="@dimen/app_back_size" />

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/cancel"
            android:textColor="@color/blue_hint"
            android:textSize="@dimen/app_text_title_size" />

        <EditText
            android:hint="@string/search_hint"
            android:id="@+id/search_et"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:layout_marginRight="@dimen/app_body_big_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/cancel_tv"
            android:layout_toEndOf="@id/search" />
    </RelativeLayout>
    <include layout="@layout/title_sepertae_horizontal" />
    <ScrollView
        android:id="@+id/recent_search_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/app_body_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="@dimen/app_body_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/recent_search_label"
                    android:text="@string/recent_search_label"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_toLeftOf="@id/recent_search_label"
                    android:layout_marginRight="@dimen/app_body_margin"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/title_sepertae_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_toRightOf="@id/recent_search_label"
                    android:layout_marginLeft="@dimen/app_body_margin"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/title_sepertae_horizontal" />
                </LinearLayout>
            </RelativeLayout>
            <com.iplay.feastbooking.component.view.gridview.UnScrollableGridView
                android:id="@+id/recent_search_gv"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.iplay.feastbooking.component.view.gridview.UnScrollableGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>