<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_confirm_layout_root"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_fix_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000" />
    <ImageView
        android:src="@drawable/back_4"
        android:layout_margin="@dimen/header_button_margin"
        android:id="@+id/back_iv"
        android:layout_width="@dimen/app_back_size"
        android:layout_height="@dimen/app_back_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cancel"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_body_big_padding"
        android:paddingRight="@dimen/app_body_big_padding"
        android:paddingTop="@dimen/app_body_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password_title"
            android:textColor="@color/deep_grey"
            android:textSize="@dimen/app_title_big_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_md"
            android:text="@string/set_new_password_hint"
            android:textColor="@color/grey"
            android:textSize="@dimen/app_text_normal" />

        <EditText
            android:id="@+id/new_pasword_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/new_password_et_hint"
            android:inputType="textPassword"
            android:textSize="@dimen/app_text_normal" />

        <EditText
            android:id="@+id/new_password_confirm_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/new_password_confirm_hint"
            android:inputType="textPassword"
            android:textSize="@dimen/app_text_normal" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_disable"
            android:enabled="false"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/app_text_title_size" />
    </LinearLayout>
</LinearLayout>