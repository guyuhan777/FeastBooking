<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_confirm_layout_root"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_fix_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000" />
    <ImageView
        android:src="@drawable/back_4"
        android:layout_margin="@dimen/header_button_margin"
        android:id="@+id/back_iv"
        android:layout_width="@dimen/app_back_size"
        android:layout_height="@dimen/app_back_size" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/app_body_big_padding"
        android:paddingRight="@dimen/app_body_big_padding"
        android:paddingTop="@dimen/app_body_margin"
        android:layout_below="@+id/cancel"
        android:layout_alignParentStart="true">
        <TextView
            android:textSize="@dimen/app_title_big_size"
            android:text="@string/wan_cheng_zhu_ce"
            android:textColor="@color/deep_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/app_text_normal"
            android:text="請輸入用戶名和密碼以完成註冊"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="請輸入用戶名"
            android:textSize="@dimen/app_text_normal"
            android:layout_marginTop="20dp"
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:inputType="text" />
        <EditText
            android:hint="請輸入密碼"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/app_text_normal"
            android:id="@+id/pasword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
        <EditText
            android:hint="請確認密碼"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/app_text_normal"
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
        <Button
            android:textSize="@dimen/app_text_title_size"
            android:enabled="false"
            android:id="@+id/next_btn"
            android:layout_marginTop="40dp"
            android:text="完成"
            android:textColor="@color/white"
            android:background="@drawable/button_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>