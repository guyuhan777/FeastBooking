<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/node_left_line"
            android:layout_width="@dimen/time_line_width"
            android:layout_height="2dp"
            android:layout_centerVertical="true"
            android:background="@color/pink" />

        <com.iplay.feastbooking.ui.timeline.ActiveRingView
            android:id="@+id/ring_node"
            android:layout_width="@dimen/time_line_circle_size"
            android:layout_height="@dimen/time_line_circle_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/node_left_line" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>