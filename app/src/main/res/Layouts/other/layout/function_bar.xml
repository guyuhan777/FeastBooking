<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fuction_bar_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/app_body_margin"
    android:paddingRight="@dimen/app_body_margin"
    android:paddingTop="@dimen/app_body_margin"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:text="進行中的訂單"
        android:id="@+id/function_name_tv"
        android:textColor="@color/app_title_color"
        android:textSize="@dimen/app_recycle_view_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/forwards"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/forwards"
        android:layout_width="@dimen/app_forward_size"
        android:layout_height="@dimen/app_forward_size" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/app_body_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/seperateline_horizontal" />
    </LinearLayout>
</LinearLayout>