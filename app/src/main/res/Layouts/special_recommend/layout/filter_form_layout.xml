<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:clickable="true"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_fix_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/app_body_margin">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/app_back_size"
            android:layout_height="@dimen/app_back_size"
            android:layout_centerVertical="true"
            android:src="@drawable/back_sm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/filter_tab_filter"
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/app_text_title_size" />

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/confirm"
            android:textColor="@color/pink"
            android:textSize="@dimen/app_text_title_size" />
    </RelativeLayout>
    <include layout="@layout/title_sepertae_horizontal" />
    <LinearLayout
        android:padding="@dimen/app_body_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rate_range_label"
                android:text="@string/rate_range_label"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_toLeftOf="@id/rate_range_label"
                android:layout_marginRight="@dimen/app_body_margin"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/title_sepertae_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_toRightOf="@id/rate_range_label"
                android:layout_marginLeft="@dimen/app_body_margin"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/title_sepertae_horizontal" />
            </LinearLayout>
        </RelativeLayout>
        <RatingBar
            android:layout_marginTop="@dimen/app_body_margin"
            android:layout_marginBottom="@dimen/app_body_margin"
            android:layout_centerVertical="true"
            android:id="@+id/ratingBar"
            android:stepSize="1"
            android:numStars="5"
            android:isIndicator="false"
            android:progressTint="@color/pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price_range_tv"
                android:text="@string/price_range_label"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_toLeftOf="@id/price_range_tv"
                android:layout_marginRight="@dimen/app_body_margin"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/title_sepertae_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:layout_toRightOf="@id/price_range_tv"
                android:layout_marginLeft="@dimen/app_body_margin"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/title_sepertae_horizontal" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/app_body_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/min_price_label"
                android:text="@string/min_price"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginLeft="@dimen/app_body_margin"
                android:id="@+id/min_price_iv"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/min_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/app_body_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/max_price_label"
                android:text="@string/max_price"
                android:textSize="@dimen/app_text_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_marginLeft="@dimen/app_body_margin"
                android:id="@+id/max_price_iv"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/max_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>