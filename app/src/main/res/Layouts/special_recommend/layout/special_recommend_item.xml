<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/app_body_margin"
    android:layout_marginLeft="@dimen/app_body_margin"
    android:layout_marginRight="@dimen/app_body_margin"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/hotel_icon"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
            <RelativeLayout
                android:layout_marginLeft="@dimen/app_body_margin"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/hotel_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/hotel_name"
                    android:layout_marginTop="@dimen/app_body_margin"
                    android:textSize="@dimen/app_text_title_size"
                    android:textColor="@color/app_title_color"
                    android:text="天河酒店"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:id="@+id/remarkEtcLine"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/app_body_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/remark_tv"
                        android:text="13条评论"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/table_num_tv"
                        android:text="1-99桌"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/feast_price_area"
                    android:layout_above="@id/remarkEtcLine"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/price_range_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/app_text_normal"
                        android:textColor="@color/deep_red"
                        android:text="2888.0-4888.0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/桌"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>