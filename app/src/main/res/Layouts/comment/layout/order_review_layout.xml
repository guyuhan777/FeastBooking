<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <View
        android:id="@+id/status_bar_fix_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/app_body_margin">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/app_back_size"
            android:layout_height="@dimen/app_back_size"
            android:layout_centerVertical="true"
            android:src="@drawable/back_sm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="發表評價"
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/app_text_title_size" />

        <TextView
            android:enabled="false"
            android:id="@+id/submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textColor="@color/pink"
            android:textSize="@dimen/app_text_title_size" />
    </RelativeLayout>
    <include layout="@layout/title_sepertae_horizontal" />
    <RelativeLayout
        android:padding="@dimen/app_body_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RatingBar
            android:layout_centerVertical="true"
            android:id="@+id/ratingBar"
            android:stepSize="1"
            android:numStars="5"
            android:rating="3"
            android:isIndicator="false"
            android:progressTint="@color/pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="3分"
            android:textSize="@dimen/app_text_title_size"
            android:layout_marginLeft="@dimen/app_body_margin"
            android:layout_centerVertical="true"
            android:id="@+id/rating_tv"
            android:layout_toRightOf="@id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/app_body_margin">
        <include layout="@layout/seperateline_horizontal" />

        <EditText
            android:layout_marginTop="@dimen/app_body_margin"
            android:id="@+id/review_et"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textSize="@dimen/app_text_big"
            android:hint="評論" />
    </LinearLayout>
</LinearLayout>