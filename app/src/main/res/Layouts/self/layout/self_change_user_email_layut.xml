<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_fix_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/app_body_margin">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/app_back_size"
            android:layout_height="@dimen/app_back_size"
            android:layout_centerVertical="true"
            android:src="@drawable/back_sm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改郵箱"
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/app_text_title_size" />

        <TextView
            android:text="提交"
            android:id="@+id/submit_tv"
            android:textColor="@color/pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/app_text_title_size"/>
    </RelativeLayout>
    <include layout="@layout/title_sepertae_horizontal" />
    <LinearLayout
        android:padding="@dimen/app_body_margin"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="@dimen/app_body_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="新郵箱"
                    android:textColor="@color/app_title_color"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/new_email_et"
                    android:background="@null"
                    android:textSize="@dimen/app_text_normal"
                    android:hint="填寫新郵箱"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/seperateline_horizontal" />
        <LinearLayout
            android:layout_marginTop="@dimen/app_body_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="驗證碼"
                    android:textColor="@color/app_title_color"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="number"
                    android:id="@+id/valid_code_et"
                    android:background="@null"
                    android:textSize="@dimen/app_text_normal"
                    android:hint="請輸入驗證碼"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:textSize="@dimen/app_text_normal"
                    android:textColor="@color/grey"
                    android:background="@drawable/button_shape_circle"
                    android:id="@+id/valid_code_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/huo_qu_yzm" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>