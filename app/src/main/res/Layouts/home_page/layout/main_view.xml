<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iplay.feastbooking.ui.HomePageActivity">
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_marginLeft="@dimen/app_body_margin"
        android:layout_marginRight="@dimen/app_body_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/home_page_title"
            android:layout_marginTop="@dimen/app_text_title_margin"
            android:textStyle="bold"
            android:textSize="@dimen/app_text_title_size"
            android:textColor="@color/app_title_color"
            android:text="特別推介"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <GridView
            android:id="@+id/home_page_recommend_grid_view"
            android:layout_marginTop="@dimen/app_text_title_margin"
            android:layout_below="@id/home_page_title"
            android:columnWidth="90dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:fadeScrollbars="true"
            android:numColumns="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </GridView>
    </RelativeLayout>
</RelativeLayout>
