<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    android:background="@color/white">
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/loading_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/pink"
            android:id="@+id/load_tv"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/app_text_title_size"
            android:text="正在努力加載中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="invisible"
            android:textColor="@color/pink"
            android:id="@+id/back_tv"
            android:layout_marginTop="5dp"
            android:layout_below="@id/load_tv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/app_text_title_size"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:layout_below="@+id/load_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/refresh_progress_bar"
            android:layout_width="@dimen/app_text_title_size"
            android:layout_height="@dimen/app_text_title_size" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar_fix_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/app_body_margin">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/app_back_size"
                android:layout_height="@dimen/app_back_size"
                android:layout_centerVertical="true"
                android:src="@drawable/back_sm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="支付憑證管理"
                android:textColor="@color/app_title_color"
                android:textSize="@dimen/app_text_title_size" />

            <TextView
                android:id="@+id/submit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="提交"
                android:textColor="@color/pink"
                android:textSize="@dimen/app_text_title_size" />
        </RelativeLayout>

        <include layout="@layout/title_sepertae_horizontal" />

        <ScrollView
            android:id="@+id/contract_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="@dimen/app_body_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_marginBottom="@dimen/app_body_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/app_title_color"
                            android:text="支付金額"
                            android:textSize="@dimen/app_text_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:inputType="numberDecimal"
                            android:id="@+id/pay_amount_et"
                            android:background="@null"
                            android:hint="請填寫支付金額"
                            android:textSize="@dimen/app_text_normal"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <include layout="@layout/seperateline_horizontal" />
                </LinearLayout>

                <com.iplay.feastbooking.component.view.gridview.UnScrollableGridView
                    android:id="@+id/photo_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="3"></com.iplay.feastbooking.component.view.gridview.UnScrollableGridView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <include layout="@layout/photo_bottom_menu_layout" />
</android.support.design.widget.CoordinatorLayout>