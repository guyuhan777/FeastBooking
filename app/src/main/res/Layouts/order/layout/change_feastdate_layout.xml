<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/status_bar_fix_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/app_body_margin">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/app_back_size"
            android:layout_height="@dimen/app_back_size"
            android:layout_centerVertical="true"
            android:src="@drawable/back_sm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="設置預定日期"
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/app_text_title_size" />

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textColor="@color/pink"
            android:textSize="@dimen/app_text_title_size" />
    </RelativeLayout>
    <include layout="@layout/title_sepertae_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/app_body_margin">

        <TextView
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/app_recycle_view_text_size"
            android:text="預定日期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/change_fesat_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="設置預定日期"
            android:textColor="@color/button_grey"
            android:textSize="@dimen/app_recycle_view_text_size" />
        <ProgressBar
            android:id="@+id/loading_pb"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/app_body_margin"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/change_fesat_date_tv"
            android:layout_width="@dimen/app_text_normal"
            android:layout_height="@dimen/app_text_normal" />
    </RelativeLayout>
</LinearLayout>