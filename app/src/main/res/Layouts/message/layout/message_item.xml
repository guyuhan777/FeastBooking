<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_body_margin"
        android:paddingRight="@dimen/app_body_margin"
        android:paddingTop="@dimen/app_body_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系統通知"
                android:textColor="@color/app_title_color"
                android:textSize="@dimen/app_text_md_1" />

            <LinearLayout
                android:id="@+id/red_dot"
                android:layout_width="@dimen/app_body_margin"
                android:layout_height="@dimen/app_body_margin"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@id/title_tv"
                android:background="@drawable/red_dot"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/app_text_md_1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_body_margin"
            android:textSize="@dimen/app_text_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_body_margin">

            <include layout="@layout/seperateline_horizontal" />
        </LinearLayout>

        <TextView
            android:id="@+id/check_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/app_body_margin"
            android:paddingTop="@dimen/app_body_margin"
            android:text="@string/check_detail"
            android:textColor="@color/pink"
            android:textSize="@dimen/app_text_md_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/seperateline_horizontal" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/message_delete_width"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light"
        android:text="@string/item_delete"
        android:textColor="@android:color/white"/>
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>