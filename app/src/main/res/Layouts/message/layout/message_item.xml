<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/app_body_margin"
    android:paddingLeft="@dimen/app_body_margin"
    android:paddingRight="@dimen/app_body_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_tv"
            android:text="系統通知"
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/app_text_md_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/red_dot"
            android:orientation="vertical"
            android:layout_marginLeft="-4dp"
            android:layout_toRightOf="@id/title_tv"
            android:background="@drawable/red_dot"
            android:layout_width="@dimen/app_body_margin"
            android:layout_height="@dimen/app_body_margin" />
        <TextView
            android:id="@+id/date_tv"
            android:textColor="@color/grey"
            android:textSize="@dimen/app_text_md_1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/content_tv"
        android:textSize="@dimen/app_text_normal"
        android:layout_marginTop="@dimen/app_body_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/app_body_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/seperateline_horizontal" />
    </LinearLayout>
    <TextView
        android:id="@+id/check_detail_tv"
        android:text="@string/check_detail"
        android:layout_gravity="right"
        android:paddingTop="@dimen/app_body_margin"
        android:paddingBottom="@dimen/app_body_margin"
        android:textColor="@color/pink"
        android:textSize="@dimen/app_text_md_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/seperateline_horizontal" />
    </LinearLayout>
</LinearLayout>