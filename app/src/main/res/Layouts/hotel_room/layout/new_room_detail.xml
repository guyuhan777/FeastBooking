<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/up_part"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/status_bar_fix_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/back_iv"
                    android:layout_margin="5dp"
                    android:background="@drawable/back_sm"
                    android:layout_width="@dimen/app_back_size"
                    android:layout_height="@dimen/app_back_size" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6">
                <TextView
                    android:id="@+id/room_name"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/app_text_title_size"
                    android:textColor="@color/app_title_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宴會廳 3F"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"></RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/bottom_button_group"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="@dimen/app_body_margin"
        android:paddingTop="@dimen/app_body_margin">
        <Button
            android:textSize="@dimen/app_text_title_size"
            android:id="@id/consult_btn"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="@string/consult"
            android:background="@drawable/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        android:background="@color/white"
        android:layout_below="@id/up_part"
        android:layout_above="@id/bottom_button_group"
        android:id="@+id/room_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:visibility="gone"
                android:id="@+id/single_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_main_icon_size"
                android:scaleType="centerCrop" />
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/room_icons_roll_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_main_icon_size"
                app:rollviewpager_play_delay="3000" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_body_margin">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/itemlist"
                    android:layout_width="@dimen/app_recycle_icon_size"
                    android:layout_height="@dimen/app_recycle_icon_size" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_body_margin"
                    android:text="@string/huan_jing"
                    android:textSize="@dimen/app_recycle_icon_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_body_margin">
                <TextView
                    android:layout_marginLeft="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/area"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/height"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_body_margin">
                <TextView
                    android:layout_marginLeft="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/li_zhu_qing_kuang"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/da_ting_xing_zhuang"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_body_margin">
                <TextView
                    android:layout_marginLeft="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/ying_bing_qu_u"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/zhuo_bu_yan_se"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_body_margin">
                <TextView
                    android:layout_marginLeft="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/ke_ding_zhuo_shu"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/app_body_margin"
                    android:layout_weight="1"
                    android:id="@+id/zui_di_xiao_fei"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/app_text_normal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">
                <include layout="@layout/seperateline_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_body_margin">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/itemlist"
                    android:layout_width="@dimen/app_recycle_icon_size"
                    android:layout_height="@dimen/app_recycle_icon_size" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/app_body_margin"
                    android:text="配置"
                    android:textSize="@dimen/app_recycle_icon_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.iplay.feastbooking.component.view.gridview.UnScrollableGridView
                android:id="@+id/config_gv"
                android:numColumns="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.iplay.feastbooking.component.view.gridview.UnScrollableGridView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>