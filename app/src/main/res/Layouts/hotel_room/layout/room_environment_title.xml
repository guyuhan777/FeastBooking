<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/app_body_margin">
    <ImageView
        android:id="@+id/hotel_room_title_icon"
        android:layout_gravity="center_vertical"
        android:src="@drawable/itemlist"
        android:layout_width="@dimen/app_recycle_icon_size"
        android:layout_height="@dimen/app_recycle_icon_size" />
    <TextView
        android:id="@+id/hotel_room_title"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_body_margin"
        android:text="@string/huan_jing"
        android:textSize="@dimen/app_recycle_icon_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>