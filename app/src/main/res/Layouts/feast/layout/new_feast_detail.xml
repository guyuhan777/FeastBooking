<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/up_part"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/status_bar_fix_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/back_iv"
                    android:layout_margin="5dp"
                    android:background="@drawable/back_sm"
                    android:layout_width="@dimen/app_back_size"
                    android:layout_height="@dimen/app_back_size" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6">
                <TextView
                    android:id="@id/feast_name"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/app_text_title_size"
                    android:textColor="@color/app_title_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"></RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/bottom_button_group"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="@dimen/app_body_margin"
        android:paddingTop="@dimen/app_body_margin">
        <Button
            android:textSize="@dimen/app_text_title_size"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="@string/cha_xun_you_hui"
            android:background="@drawable/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/up_part"
        android:layout_above="@id/bottom_button_group"
        android:id="@+id/feast_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/feast_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_main_icon_size"
                    android:scaleType="centerCrop" />
                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/feast_icons_roll_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_main_icon_size"
                    app:rollviewpager_play_delay="3000" />
                <TextView
                    android:id="@+id/price_per_table_tv"
                    android:layout_margin="@dimen/app_body_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_title_size"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/meal_num_tv"
                    android:layout_margin="@dimen/app_body_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_title_size"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <com.iplay.feastbooking.component.view.gridview.UnScrollableGridView
                android:id="@+id/feast_list"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:numColumns="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.iplay.feastbooking.component.view.gridview.UnScrollableGridView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>