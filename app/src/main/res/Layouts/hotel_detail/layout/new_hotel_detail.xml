<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/bottom_button_group"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="3dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/like_default"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textColor="@color/app_title_color"
                android:text="@string/like"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/consult_btn"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:padding="@dimen/app_body_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/app_text_title_size"
                android:textColor="@color/white"
                android:text="@string/consult"/>
        </LinearLayout>
    </LinearLayout>
    <com.iplay.feastbooking.component.view.scrollview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hotel_sv"
        android:layout_above="@id/bottom_button_group"
        android:layout_marginBottom="3dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/single_icon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_main_icon_size"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/hotel_icons_roll_pager"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_main_icon_size"
                    app:rollviewpager_play_delay="3000" />

                <TextView
                    android:id="@+id/hotel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_body_margin"
                    android:textColor="@color/app_title_color"
                    android:textSize="@dimen/app_text_title_size" />

                <com.iplay.feastbooking.component.view.bar.RatingBar
                    android:id="@+id/hotel_rate_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <cn.carbs.android.expandabletextview.library.ExpandableTextView
                    android:id="@+id/hotel_describe"
                    android:lineSpacingExtra="5dp"
                    android:layout_margin="@dimen/app_body_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:etv_ToExpandHint="展开"
                    app:etv_ToShrinkHint="收起"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:padding="@dimen/app_body_margin"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginBottom="@dimen/app_body_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/loc_iv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/loc_sm"
                        android:layout_width="@dimen/app_back_size"
                        android:layout_height="@dimen/app_back_size" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/loc_iv"
                        android:textSize="@dimen/app_text_normal"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/grey"
                        android:id="@+id/address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <include layout="@layout/seperateline_horizontal" />
                <RelativeLayout
                    android:layout_marginTop="@dimen/app_body_margin"
                    android:layout_marginBottom="@dimen/app_body_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/tel_iv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tel_small"
                        android:layout_width="@dimen/app_back_size"
                        android:layout_height="@dimen/app_back_size" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tel_iv"
                        android:textSize="@dimen/app_text_normal"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/grey"
                        android:id="@+id/tel_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <include layout="@layout/seperateline_horizontal" />
                <RelativeLayout
                    android:layout_marginTop="@dimen/app_body_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/remark_iv"
                        android:layout_centerVertical="true"
                        android:src="@drawable/remark_sm"
                        android:layout_width="@dimen/app_back_size"
                        android:layout_height="@dimen/app_back_size" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/remark_iv"
                        android:textSize="@dimen/app_text_normal"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/grey"
                        android:id="@+id/remark_tv"
                        android:text="酒樓評價"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:textColor="@color/app_title_color"
                android:textSize="@dimen/app_recycle_view_text_size"
                android:text="宴會廳"
                android:padding="@dimen/app_body_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/hotel_room_placeholder"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
            <com.iplay.feastbooking.component.view.gridview.UnScrollableGridView
                android:visibility="gone"
                android:id="@+id/hotel_room_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.iplay.feastbooking.component.view.gridview.UnScrollableGridView>

            <TextView
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:textColor="@color/app_title_color"
                android:textSize="@dimen/app_recycle_view_text_size"
                android:text="宴席菜單"
                android:padding="@dimen/app_body_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.iplay.feastbooking.component.view.gridview.UnScrollableGridView
                android:id="@+id/hotel_feast_list"
                android:numColumns="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.iplay.feastbooking.component.view.gridview.UnScrollableGridView>
        </LinearLayout>
    </com.iplay.feastbooking.component.view.scrollview.ObservableScrollView>
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="vertical">
        <View
            android:id="@+id/status_bar_fix_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00000000" />
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/back_iv"
                android:background="@drawable/back_sm"
                android:layout_width="@dimen/app_back_size"
                android:layout_height="@dimen/app_back_size" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/share_sm"
                android:layout_width="@dimen/app_back_size"
                android:layout_height="@dimen/app_back_size" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>