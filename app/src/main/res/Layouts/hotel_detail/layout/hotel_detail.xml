<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/app_body_margin"
    android:layout_marginLeft="@dimen/app_body_margin">
    <RelativeLayout
        android:id="@+id/hotel_detail_title_part"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/back_tv"
            android:textStyle="bold"
            android:text="@string/back_text"
            android:textSize="@dimen/app_text_title_size"
            android:textColor="@color/app_title_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:text="@string/hotel_detail_title"
            android:textSize="@dimen/app_text_title_size"
            android:textColor="@color/app_title_color"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/app_body_margin"
            android:layout_below="@id/back_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/seperateline_horizontal" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>