<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/app_body_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/feast_name"
        android:textStyle="bold"
        android:textColor="@color/app_title_color"
        android:textSize="@dimen/app_recycle_view_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/feast_detail_tv"
        android:textSize="@dimen/app_recycle_view_text_size"
        android:layout_alignParentRight="true"
        android:text="@string/detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/feast_price"
        android:textSize="@dimen/app_recycle_view_text_size"
        android:layout_toLeftOf="@id/feast_detail_tv"
        android:text="4396/æ¡Œ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/app_body_margin"
        android:layout_below="@id/feast_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/seperateline_horizontal" />
    </LinearLayout>
</RelativeLayout>