<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:id="@+id/hotel_main_icon"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="240dp" />
    <TextView
        android:layout_margin="@dimen/app_body_margin"
        android:textColor="@color/app_title_color"
        android:textSize="@dimen/app_text_title_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="白云酒店"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/app_body_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:background="@drawable/star_full"
            android:id="@+id/star_1"
            android:layout_width="@dimen/app_rating_icon_size"
            android:layout_height="@dimen/app_rating_icon_size"
            android:scaleType="center"/>
        <ImageView
            android:layout_marginLeft="2dp"
            android:background="@drawable/star_full"
            android:id="@+id/star_2"
            android:layout_width="@dimen/app_rating_icon_size"
            android:layout_height="@dimen/app_rating_icon_size"
            android:scaleType="center"/>
        <ImageView
            android:layout_marginLeft="2dp"
            android:background="@drawable/star_full"
            android:id="@+id/star_3"
            android:layout_width="@dimen/app_rating_icon_size"
            android:layout_height="@dimen/app_rating_icon_size"
            android:scaleType="center"/>
        <ImageView
            android:layout_marginLeft="2dp"
            android:background="@drawable/star_half"
            android:id="@+id/star_4"
            android:layout_width="@dimen/app_rating_icon_size"
            android:layout_height="@dimen/app_rating_icon_size"
            android:scaleType="center"/>
        <ImageView
            android:layout_marginLeft="2dp"
            android:background="@drawable/star"
            android:id="@+id/star_5"
            android:layout_width="@dimen/app_rating_icon_size"
            android:layout_height="@dimen/app_rating_icon_size"
            android:scaleType="center"/>
        <TextView
            android:id="@+id/hotel_rate"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:textColor="@color/pink"
            android:textSize="@dimen/app_text_normal"
            android:text="3.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="分"
            android:textSize="@dimen/app_text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/app_body_margin"
        android:id="@+id/recent_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hotel_flexible_content"/>
    <LinearLayout
        android:layout_margin="@dimen/app_body_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/seperateline_horizontal" />
    </LinearLayout>
    <TextView
        android:padding="@dimen/app_body_margin"
        android:text="@string/hotel_fixed_content"
        android:id="@+id/hotel_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>