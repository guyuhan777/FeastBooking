<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_body_margin"
    android:paddingRight="@dimen/app_body_margin"
    android:paddingTop="@dimen/app_body_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginBottom="@dimen/app_body_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/feast_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="永結同心宴"
            android:textColor="@color/app_title_color"
            android:textSize="@dimen/app_recycle_view_text_size" />
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/forwards"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/forwards" />
        <TextView
            android:layout_marginRight="@dimen/app_body_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/forwards"
            android:text="4388.0/桌"
            android:textSize="@dimen/app_recycle_view_text_size" />
    </RelativeLayout>
    <include layout="@layout/seperateline_horizontal" />
</LinearLayout>